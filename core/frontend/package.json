{
  "name": "aideon-ai-lite",
  "version": "1.0.0",
  "description": "The world's first truly hybrid autonomous AI system that combines local PC processing with cloud intelligence",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "build": "node scripts/build.js",
    "test": "jest",
    "package:win": "electron-builder --win",
    "package:mac": "electron-builder --mac",
    "package:linux": "electron-builder --linux",
    "build:win": "npm run package:win",
    "build:mac": "npm run package:mac",
    "build:linux": "npm run package:linux"
  },
  "author": {
    "name": "Aideon AI Team",
    "email": "dev@aideonai.com"
  },
  "license": "PROPRIETARY",
  "dependencies": {
    "axios": "^1.6.2",
    "commander": "^14.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "electron-updater": "^6.1.7",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase": "^11.9.0",
    "firebase-admin": "^13.4.0",
    "fs-extra": "^11.3.0",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "node-fetch": "^2.7.0",
    "socket.io-client": "^4.7.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "canvas": "^3.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0"
  },
  "build": {
    "appId": "com.aideonai.lite",
    "productName": "Aideon AI Lite",
    "copyright": "Copyright Â© 2025 Aideon AI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/win/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icons/mac/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons/linux",
      "category": "Utility",
      "maintainer": "Aideon AI Team <dev@aideonai.com>"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  }
}
